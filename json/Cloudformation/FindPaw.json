{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Infraestrutura para o projeto FindPaw com RDS para perfis de pets",
  "Parameters": {
    "EnvironmentName": {
      "Type": "String",
      "Default": "dev",
      "Description": "Nome do ambiente (ex: dev, test, prod)"
    },
    "VPCId": {
      "Type": "AWS::SSM::Parameter::Value<String>",
      "Default": "/findpaw/vpc-id",
      "Description": "ID da VPC"
    },
    "PublicSubnet": {
      "Type": "AWS::SSM::Parameter::Value<String>",
      "Default": "/findpaw/public-subnet",
      "Description": "ID da Subnet pública"
    },
    "PrivateSubnet1": {
      "Type": "AWS::SSM::Parameter::Value<String>",
      "Default": "/findpaw/private-subnet-1",
      "Description": "ID da Subnet privada 1"
    },
    "PrivateSubnet2": {
      "Type": "AWS::SSM::Parameter::Value<String>",
      "Default": "/findpaw/private-subnet-2",
      "Description": "ID da Subnet privada 2"
    },
    "DatabaseUsername": {
      "Type": "String",
      "Description": "Usuário master do banco de dados",
      "NoEcho": true
    },
    "DatabasePassword": {
      "Type": "String",
      "Description": "Senha master do banco de dados",
      "NoEcho": true
    }
  },
  "Resources": {
    "PetsPerdidosBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "findpaw-pets-perdidos-${EnvironmentName}-${AWS::AccountId}"
        },
        "AccessControl": "Private",
        "VersioningConfiguration": {
          "Status": "Enabled"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "FindPaw-Pets-Perdidos-${EnvironmentName}"
            }
          }
        ]
      }
    },
    "PetsPerdidosTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {
          "Fn::Sub": "PetsPerdidos-${EnvironmentName}"
        },
        "AttributeDefinitions": [
          {
            "AttributeName": "PetID",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "PetID",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "FindPaw-Pets-Perdidos-${EnvironmentName}"
            }
          }
        ]
      }
    },
    "FindPawRDSInstance": {
      "Type": "AWS::RDS::DBInstance",
      "Properties": {
        "DBInstanceIdentifier": {
          "Fn::Sub": "findpaw-pets-db-${EnvironmentName}"
        },
        "Engine": "postgres",
        "EngineVersion": "13.7",
        "DBInstanceClass": "db.t3.micro",
        "AllocatedStorage": "20",
        "StorageType": "gp2",
        "MasterUsername": {
          "Ref": "DatabaseUsername"
        },
        "MasterUserPassword": {
          "Ref": "DatabasePassword"
        },
        "VPCSecurityGroups": [
          {
            "Ref": "RDSSecurityGroup"
          }
        ],
        "DBSubnetGroupName": {
          "Ref": "FindPawDBSubnetGroup"
        },
        "PubliclyAccessible": false,
        "MultiAZ": false,
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "FindPaw-RDS-${EnvironmentName}"
            }
          }
        ]
      }
    },
    "FindPawDBSubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "Subnet group para o RDS do FindPaw",
        "SubnetIds": [
          {
            "Ref": "PrivateSubnet1"
          },
          {
            "Ref": "PrivateSubnet2"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "FindPaw-DBSubnetGroup-${EnvironmentName}"
            }
          }
        ]
      }
    },
    "RDSSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "SG para o RDS do FindPaw",
        "VpcId": {
          "Ref": "VPCId"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 5432,
            "ToPort": 5432,
            "SourceSecurityGroupId": {
              "Ref": "FindPawSecurityGroup"
            }
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "FindPaw-RDS-SG-${EnvironmentName}"
            }
          }
        ]
      }
    },
    "FindPawTracker": {
      "Type": "AWS::Location::Tracker",
      "Properties": {
        "TrackerName": {
          "Fn::Sub": "FindPaw-Tracker-${EnvironmentName}"
        }
      }
    },
    "FindPawApiGateway": {
      "Type": "AWS::ApiGateway::RestApi",
      "Properties": {
        "Name": {
          "Fn::Sub": "FindPaw-API-${EnvironmentName}"
        }
      }
    },
    "LambdaErrorAlarm": {
      "Type": "AWS::CloudWatch::Alarm",
      "Properties": {
        "AlarmName": {
          "Fn::Sub": "FindPaw-Lambda-Errors-${EnvironmentName}"
        },
        "MetricName": "Errors",
        "Namespace": "AWS/Lambda",
        "Threshold": 1,
        "ComparisonOperator": "GreaterThanOrEqualToThreshold"
      }
    }
  },
  "Outputs": {
    "RDSInstanceEndpoint": {
      "Description": "Endpoint do RDS para conexão",
      "Value": {
        "Fn::GetAtt": [
          "FindPawRDSInstance",
          "Endpoint.Address"
        ]
      }
    },
    "S3BucketName": {
      "Description": "Nome do Bucket S3 para fotos",
      "Value": {
        "Ref": "PetsPerdidosBucket"
      }
    },
    "LambdaFunctionArn": {
      "Description": "ARN da Função Lambda",
      "Value": {
        "Fn::GetAtt": [
          "FindPawLambda",
          "Arn"
        ]
      }
    },
    "SNSTopicArn": {
      "Description": "ARN do Tópico SNS para notificações",
      "Value": {
        "Ref": "FindPawSNSTopic"
      }
    }
  }
}
